<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="TitleBar" >
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">59dp</item>
        <item name="android:background">#1694d4</item>
        <item name="android:layout_alignParentTop">true</item>
    </style>

    <style name="Title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">18dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="TitleBarRightIcon" parent="TitleBarIcon">
        <item name="android:layout_marginLeft">300dp</item>
    </style>
    <style name="TitleBarLeftIcon_back" parent="TitleBarIcon">
        <item name="android:layout_marginRight">300dp</item>
        <item name="android:src">@mipmap/navigation_back</item>
    </style>
    <style name="TitleBarLeftIcon_list" parent="TitleBarIcon">
        <item name="android:layout_marginRight">300dp</item>
        <item name="android:src">@mipmap/list</item>
    </style>
    <style name="TitleBarIcon">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">28dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>



</resources>
