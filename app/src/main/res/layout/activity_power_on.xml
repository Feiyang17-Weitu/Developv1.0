<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"  tools:context=".MainActivity"
    android:background="@android:color/white">

    <FrameLayout
        style="@style/TitleBar"
        android:id="@+id/title_bar">
        <ImageButton
            android:id="@+id/btnDrawer"
            style="@style/TitleBarLeftIcon"
            android:src="@mipmap/icon_edit"
            android:background="@mipmap/icon_edit"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            />
        <TextView
            style="@style/Title"
            android:text="@string/my_weitu"
            />
        <ImageView
            android:onClick="true"
            style="@style/TitleBarRightIcon"
            android:id="@+id/add_album"
            android:src="@android:drawable/ic_input_add"/>

    </FrameLayout>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent" android:layout_height="match_parent">
        <ListView
            android:id="@+id/photo_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="59dp">
        </ListView>
    </LinearLayout>

<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginTop="59dp">

    <FrameLayout
        android:id="@+id/fragment_layout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

    </FrameLayout>
    <RelativeLayout
        android:id="@+id/menu_layout_left"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="left"
        android:background="#4F94CD">
        <ListView
            android:id="@+id/menu_listView_l"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>
</RelativeLayout>